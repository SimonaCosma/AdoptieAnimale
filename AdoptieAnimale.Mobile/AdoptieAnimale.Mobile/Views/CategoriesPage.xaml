<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AdoptieAnimale.Mobile.Views.CategoriesPage"
             Title="Categorii">

    <Grid RowDefinitions="*" Padding="10">
        <CollectionView x:Name="CategoriesCollection">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="5" Padding="15" BorderColor="LightGray" CornerRadius="10">
                        <VerticalStackLayout Spacing="5">
                            <Label Text="{Binding Name}" FontSize="18" FontAttributes="Bold"/>
                            <Label Text="{Binding Description}" FontSize="14" TextColor="Gray"/>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <ActivityIndicator x:Name="LoadingIndicator" IsRunning="False" IsVisible="False" 
                          Color="Blue" VerticalOptions="Center"/>
    </Grid>
</ContentPage>