@page
@model AdoptieAnimale.Web.Pages.Categories.DetailsModel
@{
    ViewData["Title"] = "Detalii Categorie";
}

<h1>Detalii Categorie</h1>
<hr />

<dl class="row">
    <dt class="col-sm-2">Nume</dt>
    <dd class="col-sm-10">@Model.Category.Name</dd>

    <dt class="col-sm-2">Descriere</dt>
    <dd class="col-sm-10">@(Model.Category.Description ?? "N/A")</dd>
</dl>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Category.ID" class="btn btn-warning">Modifică</a>
    <a asp-page="./Index" class="btn btn-secondary">Înapoi</a>
</div>