@page
@model AdoptieAnimale.Web.Pages.Categories.DeleteModel
@{
    ViewData["Title"] = "Șterge Categorie";
}

<h1>Șterge Categorie</h1>
<h3 class="text-danger">Sigur doriți să ștergeți această categorie?</h3>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger" role="alert">
        @Model.ErrorMessage
    </div>
}

<dl class="row">
    <dt class="col-sm-2">Nume</dt>
    <dd class="col-sm-10">@Model.Category.Name</dd>

    <dt class="col-sm-2">Descriere</dt>
    <dd class="col-sm-10">@(Model.Category.Description ?? "N/A")</dd>
</dl>

<form method="post">
    <input type="hidden" asp-for="Category.ID" />
    <button type="submit" class="btn btn-danger">Șterge</button>
    <a asp-page="./Index" class="btn btn-secondary">Anulează</a>
</form>