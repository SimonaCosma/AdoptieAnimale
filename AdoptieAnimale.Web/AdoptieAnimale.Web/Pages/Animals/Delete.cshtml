@page
@model AdoptieAnimale.Web.Pages.Animals.DeleteModel
@{
    ViewData["Title"] = "Șterge Animal";
}

<h1>Șterge Animal</h1>

<h3 class="text-danger">Sigur doriți să ștergeți acest animal?</h3>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger" role="alert">
        @Model.ErrorMessage
    </div>
}

<div class="row">
    <div class="col-md-6">
        @if (!string.IsNullOrEmpty(Model.Animal.PhotoUrl))
        {
            <img src="@Model.Animal.PhotoUrl" class="img-fluid rounded mb-3" alt="@Model.Animal.Name" style="max-height: 300px;">
        }

        <dl class="row">
            <dt class="col-sm-4">Nume</dt>
            <dd class="col-sm-8">@Model.Animal.Name</dd>

            <dt class="col-sm-4">Specie</dt>
            <dd class="col-sm-8">@Model.Animal.Species</dd>

            <dt class="col-sm-4">Rasă</dt>
            <dd class="col-sm-8">@(Model.Animal.Breed ?? "Necunoscută")</dd>

            <dt class="col-sm-4">Vârstă</dt>
            <dd class="col-sm-8">@Model.Animal.Age @(Model.Animal.Age == 1 ? "an" : "ani")</dd>

            <dt class="col-sm-4">Categorie</dt>
            <dd class="col-sm-8">@(Model.Animal.Category?.Name ?? "N/A")</dd>

            <dt class="col-sm-4">Adăpost</dt>
            <dd class="col-sm-8">@(Model.Animal.Shelter?.Name ?? "N/A")</dd>
        </dl>

        <form method="post">
            <input type="hidden" asp-for="Animal.ID" />
            <button type="submit" class="btn btn-danger">Șterge</button>
            <a asp-page="./Index" class="btn btn-secondary">Anulează</a>
        </form>
    </div>
</div>