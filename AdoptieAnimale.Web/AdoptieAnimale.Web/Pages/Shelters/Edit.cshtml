@page
@model AdoptieAnimale.Web.Pages.Shelters.EditModel
@{
    ViewData["Title"] = "Modifică Adăpost";
}

<h1>Modifică Adăpost</h1>
<hr />

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger" role="alert">
        @Model.ErrorMessage
    </div>
}

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Shelter.ID" />

            <div class="form-group mb-3">
                <label asp-for="Shelter.Name" class="control-label"></label>
                <input asp-for="Shelter.Name" class="form-control" />
                <span asp-validation-for="Shelter.Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Shelter.Address" class="control-label"></label>
                <input asp-for="Shelter.Address" class="form-control" />
                <span asp-validation-for="Shelter.Address" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Shelter.City" class="control-label"></label>
                <input asp-for="Shelter.City" class="form-control" />
                <span asp-validation-for="Shelter.City" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Shelter.Phone" class="control-label"></label>
                <input asp-for="Shelter.Phone" class="form-control" />
                <span asp-validation-for="Shelter.Phone" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Shelter.Email" class="control-label"></label>
                <input asp-for="Shelter.Email" class="form-control" />
                <span asp-validation-for="Shelter.Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Shelter.Capacity" class="control-label"></label>
                <input asp-for="Shelter.Capacity" class="form-control" type="number" />
                <span asp-validation-for="Shelter.Capacity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Salvează Modificările" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-secondary">Înapoi la listă</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}